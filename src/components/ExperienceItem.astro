---
interface Props {
  title: string
  description: string
  link?: string
  date: string
}

const { title, description, link, date } = Astro.props
---

<div
  class="absolute w-3 h-3 bg-slate-600 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-slate-800">{date}</time
>
<h3 class="text-lg font-semibold text-amber-300 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal text-slate-800 text-balance">
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="bg-black/5 
        border border-black/10 rounded-full
        inline-flex justify-center items-center gap-x-2
        py-1 px-2 md:py-2 md:px-4
        text-xs md:text-base
        transition text-slate-800 opacity-80
        hover:scale-110 hover:bg-black/10"
      target="_blank"
    >
      Saber m√°s...{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
